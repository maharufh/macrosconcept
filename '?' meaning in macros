// C++ program to illustrate macros
#include <iostream>
using namespace std;

// Function-like Macro definition
#define min(a, b) (((a) < (b)) ? (a) : (b)) // this line is called Ternary operation
// meanining of above line==>if a less then b then return a else return b
//we can write the avove line in another formate which is mentioned below
//if(a<b)
//return a;
//else
//return b;

// Driver Code
int main()
{

	// Given two number a and b
	int a = 18;
	int b = 76;

	cout << "Minimum value between"
		<< a << " and " << b
		<< " is: " << min(a, b);

	return 0;
}

